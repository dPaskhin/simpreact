{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "downlevelIteration": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "./lib",
    "erasableSyntaxOnly": true,
    "skipLibCheck": true,
    "paths": {
      "@simpreact/core": ["./src/main/core/index.js"],
      "@simpreact/internal": ["./src/main/core/internal.js"],
      "@simpreact/dom": ["./src/main/dom/index.js"],
      "@simpreact/hooks": ["./src/main/hooks/index.js"],
      "@simpreact/jsx-runtime": ["./src/main/jsx-runtime/index.js"],
      "@simpreact/shared": ["./src/main/shared/index.js"]
    }
  },
  "include": ["./src/**/*"]
}
