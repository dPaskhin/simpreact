{
  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "downlevelIteration": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "target": "ES6",
    "module": "ES6",
    "outDir": "./lib",
    "erasableSyntaxOnly": true
  },
  "include": ["./src/**/*"]
}
